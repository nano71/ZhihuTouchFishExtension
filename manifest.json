{
  "manifest_version": 3,
  "name": "Zhihu DOM Modifier",
  "version": "1.0",
  "description": "在 *.zhihu.com 上修改 DOM 的简单示例（支持 SPA 路由变化）。",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.zhihu.com/*"],
      "js": ["content.js"],
        "css": ["style.css"],
      "run_at": "document_end"
    }
  ]
}
